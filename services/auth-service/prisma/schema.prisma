
model User {
  id           String          @id @default(cuid())
  email        String          @unique
  password     String
  name         String
  roles        Role[]          @relation(...)
  refreshTokens RefreshToken[]
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}

model Profile {
  id        String   @id @default(uuid())
  userId    String   @unique
  phone     String?
  avatarUrl String?
  bio       String?
  address   String?
  socialLinks Json?
  user      User     @relation(fields: [userId], references: [id])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
