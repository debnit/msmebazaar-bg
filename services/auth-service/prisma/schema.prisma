
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  isPro     Boolean  @default(false)
  roles     String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile   Profile?
}

model Profile {
  id        String   @id @default(uuid())
  userId    String   @unique
  phone     String?
  avatarUrl String?
  bio       String?
  address   String?
  socialLinks Json?
  user      User     @relation(fields: [userId], references: [id])
}

