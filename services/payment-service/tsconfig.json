{
  "compilerOptions": {
    "composite": true,
    /* Output to dist */
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../../shared/dist/*"]
    },
    "target": "ES2021", /* Module + target for Node.js v18+ */
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2021"],
    "types": ["node", "jest"],

    /* Strict type-checking */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,

    /* Interop and JSON */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Source maps for debugging */
    "sourceMap": true,

    /* Allow decorators if needed (future RBAC/logging features) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Incremental build for faster re-builds */
    "incremental": true,

    /* Avoid compile errors with TS tooling */
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/tests"],
  "references": [
    { "path": "../../shared" }
  ],
  
}
