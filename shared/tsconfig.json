{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "moduleResolution": "node",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@msmebazaar/shared": ["."],
      "@msmebazaar/shared/*": ["./*"],
      "@msmebazaar/types": ["./types"],
      "@msmebazaar/types/*": ["./types/*"]
    }
  },
  "include": [
    "index.ts",
    "auth/**/*.ts",
    "middleware/**/*.ts",
    "services/**/*.ts",
    "utils/**/*.ts",
    "validation/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.spec.ts",
    "tests"
  ]
}
