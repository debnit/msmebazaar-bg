{
  "name": "msmebazaar-platform",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "mobile",
    "shared",
    "api-gateway",
    "services/*"
  ],
  "scripts": {
    "setup": "./scripts/setup-dev.sh",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:frontend\" \"pnpm dev:mobile\"",
    "dev:api": "concurrently \"pnpm dev:gateway\" \"pnpm dev:services\"",
    "dev:gateway": "pnpm --filter api-gateway dev",
    "dev:services": "pnpm --filter 'services/*' dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:mobile": "pnpm --filter mobile start",
    "build": "pnpm build:shared && pnpm build:frontend && pnpm build:services && pnpm build:gateway",
    "build:shared": "pnpm --filter shared build",
    "build:frontend": "pnpm --filter frontend build",
    "build:gateway": "pnpm --filter api-gateway build",
    "build:services": "pnpm --filter 'services/*' build",
    "build:docker": "pnpm build && docker-compose build",
    "test": "pnpm test:shared && pnpm test:frontend && pnpm test:services && pnpm test:gateway",
    "test:shared": "pnpm --filter shared test",
    "test:frontend": "pnpm --filter frontend test",
    "test:gateway": "pnpm --filter api-gateway test",
    "test:services": "pnpm --filter 'services/*' test",
    "test:all": "pnpm test && pnpm test:mobile",
    "test:mobile": "pnpm --filter mobile test",
    "lint": "pnpm lint:shared && pnpm lint:frontend && pnpm lint:services && pnpm lint:gateway",
    "lint:shared": "pnpm --filter shared lint",
    "lint:frontend": "pnpm --filter frontend lint",
    "lint:gateway": "pnpm --filter api-gateway lint",
    "lint:services": "pnpm --filter 'services/*' lint",
    "lint:all": "pnpm lint && pnpm lint:mobile",
    "lint:mobile": "pnpm --filter mobile lint",
    "type-check": "tsc --build",
    "type-check:shared": "pnpm --filter shared type-check",
    "type-check:frontend": "pnpm --filter frontend type-check",
    "type-check:gateway": "pnpm --filter api-gateway type-check",
    "type-check:services": "pnpm --filter 'services/*' type-check",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "pnpm clean:shared && pnpm clean:frontend && pnpm clean:services && pnpm clean:gateway",
    "clean:shared": "pnpm --filter shared clean",
    "clean:frontend": "pnpm --filter frontend clean",
    "clean:gateway": "pnpm --filter api-gateway clean",
    "clean:services": "pnpm --filter 'services/*' clean",
    "clean:all": "rm -rf node_modules */node_modules */*/node_modules pnpm-lock.yaml",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "postinstall": "pnpm build:shared",
    "generate-configs": "node scripts/generate-service-configs.js",
    "generate-dockerfiles": "node scripts/generate-service-dockerfiles.js"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0"
  }
}
