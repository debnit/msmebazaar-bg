{
  "name": "msmebazaar-platform",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "mobile",
    "shared",
    "api-gateway",
    "services/*"
  ],
  "scripts": {
    "setup": "./scripts/setup-dev.sh",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:frontend\" \"pnpm dev:mobile\"",
    "dev:api": "concurrently \"pnpm dev:gateway\" \"pnpm dev:services\"",
    "dev:gateway": "pnpm --filter api-gateway dev",
    "dev:services": "pnpm --filter 'services/*' dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:mobile": "pnpm --filter mobile start",
    "build": "pnpm build:shared && pnpm build:frontend && pnpm build:services && pnpm build:gateway",
    "build:shared": "pnpm --filter shared build",
    "build:frontend": "pnpm --filter frontend build",
    "build:gateway": "pnpm --filter api-gateway build",
    "build:services": "pnpm --filter 'services/*' build",
    "build:docker": "pnpm build && docker-compose build",
    "test": "pnpm test:shared && pnpm test:frontend && pnpm test:services && pnpm test:gateway",
    "test:shared": "pnpm --filter shared test",
    "test:frontend": "pnpm --filter frontend test",
    "test:gateway": "pnpm --filter api-gateway test",
    "test:services": "pnpm --filter 'services/*' test",
    "test:all": "pnpm test && pnpm test:mobile",
    "test:mobile": "pnpm --filter mobile test",
    "lint": "pnpm lint:shared && pnpm lint:frontend && pnpm lint:services && pnpm lint:gateway",
    "lint:shared": "pnpm --filter shared lint",
    "lint:frontend": "pnpm --filter frontend lint",
    "lint:gateway": "pnpm --filter api-gateway lint",
    "lint:services": "pnpm --filter 'services/*' lint",
    "lint:all": "pnpm lint && pnpm lint:mobile",
    "lint:mobile": "pnpm --filter mobile lint",
    "type-check": "tsc --build",
    "type-check:shared": "pnpm --filter shared type-check",
    "type-check:frontend": "pnpm --filter frontend type-check",
    "type-check:gateway": "pnpm --filter api-gateway type-check",
    "type-check:services": "pnpm --filter 'services/*' type-check",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "pnpm clean:shared && pnpm clean:frontend && pnpm clean:services && pnpm clean:gateway",
    "clean:shared": "pnpm --filter shared clean",
    "clean:frontend": "pnpm --filter frontend clean",
    "clean:gateway": "pnpm --filter api-gateway clean",
    "clean:services": "pnpm --filter 'services/*' clean",
    "clean:all": "rm -rf node_modules */node_modules */*/node_modules pnpm-lock.yaml",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "postinstall": "pnpm build:shared",
    "generate-configs": "node scripts/generate-service-configs.js",
    "generate-dockerfiles": "node scripts/generate-service-dockerfiles.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-accordion": "1.2.2",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-aspect-ratio": "1.1.1",
    "@radix-ui/react-avatar": "latest",
    "@radix-ui/react-checkbox": "1.1.3",
    "@radix-ui/react-collapsible": "1.1.2",
    "@radix-ui/react-context-menu": "2.2.4",
    "@radix-ui/react-dialog": "1.1.4",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-hover-card": "1.1.4",
    "@radix-ui/react-label": "latest",
    "@radix-ui/react-menubar": "1.1.4",
    "@radix-ui/react-navigation-menu": "1.2.3",
    "@radix-ui/react-popover": "1.1.4",
    "@radix-ui/react-progress": "latest",
    "@radix-ui/react-radio-group": "1.2.2",
    "@radix-ui/react-scroll-area": "1.2.2",
    "@radix-ui/react-select": "latest",
    "@radix-ui/react-separator": "latest",
    "@radix-ui/react-slider": "1.2.2",
    "@radix-ui/react-slot": "latest",
    "@radix-ui/react-switch": "1.1.2",
    "@radix-ui/react-tabs": "1.1.2",
    "@radix-ui/react-toast": "latest",
    "@radix-ui/react-toggle": "1.1.1",
    "@radix-ui/react-toggle-group": "1.1.1",
    "@radix-ui/react-tooltip": "1.1.6",
    "@tanstack/react-query": "latest",
    "@tanstack/react-query-devtools": "latest",
    "autoprefixer": "^10.4.20",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.0.4",
    "date-fns": "4.1.0",
    "embla-carousel-react": "8.5.1",
    "geist": "latest",
    "immer": "latest",
    "input-otp": "1.4.1",
    "lucide-react": "^0.454.0",
    "next": "15.2.4",
    "next-themes": "latest",
    "react": "^19",
    "react-day-picker": "9.8.0",
    "react-dom": "^19",
    "react-hook-form": "^7.60.0",
    "react-resizable-panels": "^2.1.7",
    "recharts": "2.15.4",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "use-sync-external-store": "latest",
    "vaul": "^0.9.9",
    "zod": "^3.25.67",
    "zustand": "latest"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "postcss": "^8.5",
    "tailwindcss": "^4.1.9",
    "tw-animate-css": "1.3.3",
    "typescript": "^5",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0"
  }
}
