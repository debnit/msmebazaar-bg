{
  "name": "msmebazaar-platform",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "mobile",
    "shared",
    "api-gateway",
    "services/*"
  ],
  "scripts": {
    "setup": "./scripts/setup-dev.sh",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\" \"npm run dev:mobile\"",
    "dev:api": "concurrently \"npm run dev:gateway\" \"npm run dev:services\"",
    "dev:gateway": "cd api-gateway && npm run dev",
    "dev:services": "concurrently \"cd services/auth-service && npm run dev\" \"cd services/loan-service && npm run dev\" \"cd services/buyer-service && npm run dev\" \"cd services/payment-service && npm run dev\" \"cd services/user-profile-service && npm run dev\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "build": "npm run build:shared && npm run build:frontend && npm run build:services && npm run build:gateway",
    "build:shared": "cd shared && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:gateway": "cd api-gateway && npm run build",
    "build:services": "cd services && for service in */; do cd \"$service\" && npm run build && cd ..; done",
    "test": "npm run test:shared && npm run test:frontend && npm run test:services && npm run test:gateway",
    "test:shared": "cd shared && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "test:gateway": "cd api-gateway && npm run test",
    "test:services": "cd services && for service in */; do cd \"$service\" && npm run test && cd ..; done",
    "test:all": "npm run test && npm run test:mobile",
    "test:mobile": "cd mobile && npm run test",
    "lint": "npm run lint:shared && npm run lint:frontend && npm run lint:services && npm run lint:gateway",
    "lint:shared": "cd shared && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:gateway": "cd api-gateway && npm run lint",
    "lint:services": "cd services && for service in */; do cd \"$service\" && npm run lint && cd ..; done",
    "lint:all": "npm run lint && npm run lint:mobile",
    "lint:mobile": "cd mobile && npm run lint",
    "type-check": "tsc --build",
    "type-check:shared": "cd shared && npx tsc --noEmit",
    "type-check:frontend": "cd frontend && npx tsc --noEmit",
    "type-check:gateway": "cd api-gateway && npx tsc --noEmit",
    "type-check:services": "cd services && for service in */; do cd \"$service\" && npx tsc --noEmit && cd ..; done",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "npm run clean:shared && npm run clean:frontend && npm run clean:services && npm run clean:gateway",
    "clean:shared": "cd shared && npm run clean",
    "clean:frontend": "cd frontend && rm -rf .next",
    "clean:gateway": "cd api-gateway && npm run clean",
    "clean:services": "cd services && for service in */; do cd \"$service\" && rm -rf dist && cd ..; done",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "generate-configs": "node scripts/generate-service-configs.js",
    "generate-dockerfiles": "node scripts/generate-service-dockerfiles.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-accordion": "1.2.2",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-aspect-ratio": "1.1.1",
    "@radix-ui/react-avatar": "latest",
    "@radix-ui/react-checkbox": "1.1.3",
    "@radix-ui/react-collapsible": "1.1.2",
    "@radix-ui/react-context-menu": "2.2.4",
    "@radix-ui/react-dialog": "1.1.4",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-hover-card": "1.1.4",
    "@radix-ui/react-label": "latest",
    "@radix-ui/react-menubar": "1.1.4",
    "@radix-ui/react-navigation-menu": "1.2.3",
    "@radix-ui/react-popover": "1.1.4",
    "@radix-ui/react-progress": "latest",
    "@radix-ui/react-radio-group": "1.2.2",
    "@radix-ui/react-scroll-area": "1.2.2",
    "@radix-ui/react-select": "latest",
    "@radix-ui/react-separator": "latest",
    "@radix-ui/react-slider": "1.2.2",
    "@radix-ui/react-slot": "latest",
    "@radix-ui/react-switch": "1.1.2",
    "@radix-ui/react-tabs": "1.1.2",
    "@radix-ui/react-toast": "latest",
    "@radix-ui/react-toggle": "1.1.1",
    "@radix-ui/react-toggle-group": "1.1.1",
    "@radix-ui/react-tooltip": "1.1.6",
    "@tanstack/react-query": "latest",
    "@tanstack/react-query-devtools": "latest",
    "autoprefixer": "^10.4.20",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.0.4",
    "date-fns": "4.1.0",
    "embla-carousel-react": "8.5.1",
    "geist": "latest",
    "immer": "latest",
    "input-otp": "1.4.1",
    "lucide-react": "^0.454.0",
    "next": "15.2.4",
    "next-themes": "latest",
    "react": "^19",
    "react-day-picker": "9.8.0",
    "react-dom": "^19",
    "react-hook-form": "^7.60.0",
    "react-resizable-panels": "^2.1.7",
    "recharts": "2.15.4",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "use-sync-external-store": "latest",
    "vaul": "^0.9.9",
    "zod": "^3.25.67",
    "zustand": "latest"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "postcss": "^8.5",
    "tailwindcss": "^4.1.9",
    "tw-animate-css": "1.3.3",
    "typescript": "^5",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0"
  }
}
