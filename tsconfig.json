{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true
  },
  "files": [],
  "references": [
    { "path": "./shared" },
    { "path": "./api-gateway" },
    { "path": "./frontend" },
    { "path": "./services/auth-service" },
    { "path": "./services/loan-service" },
    { "path": "./services/payment-service" },
    { "path": "./services/user-profile-service" },
    { "path": "./services/recommendation-service" },
    { "path": "./services/valuation-service" },
    { "path": "./services/transaction-matching-service" },
    { "path": "./services/superadmin-service" },
    { "path": "./services/sellerservice" },
    { "path": "./services/search-matchmaking-service" },
    { "path": "./services/notification-service" },
    { "path": "./services/msme-service" },
    { "path": "./services/msme-listing-service" },
    { "path": "./services/ml-monitoring-service" },
    { "path": "./services/matchmaking-service" },
    { "path": "./services/exit-as-a-service" },
    { "path": "./services/compliance-service" },
    { "path": "./services/buyer-service" },
    { "path": "./services/admin-service" },
    { "path": "./services/agent-service" }
  ]
}

