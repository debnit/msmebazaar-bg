{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@msmebazaar/shared": ["./shared"],
      "@msmebazaar/shared/*": ["./shared/*"],
      "@msmebazaar/types": ["./shared/types"],
      "@msmebazaar/types/*": ["./shared/types/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./shared" },
    { "path": "./api-gateway" },
    { "path": "./frontend" },
    { "path": "./services/admin-service" },
    { "path": "./services/agent-service" },
    { "path": "./services/auth-service" },
    { "path": "./services/buyer-service" },
    { "path": "./services/compliance-service" },
    { "path": "./services/exit-as-a-service" },
    { "path": "./services/investor-service" },
    { "path": "./services/loan-service" },
    { "path": "./services/matchmaking-service" },
    { "path": "./services/ml-monitoring-service" },
    { "path": "./services/msme-listing-service" },
    { "path": "./services/msme-service" },
    { "path": "./services/notification-service" },
    { "path": "./services/payment-service" },
    { "path": "./services/recommendation-service" },
    { "path": "./services/search-matchmaking-service" },
    { "path": "./services/sellerservice" },
    { "path": "./services/superadmin-service" },
    { "path": "./services/transaction-matching-service" },
    { "path": "./services/user-profile-service" },
    { "path": "./services/valuation-service" }
  ]
}

